@model IEnumerable<LifeCoachServiceModel>

@{
    ViewBag.Title = "Life Coaches Administration";
}

<h1>All Life Coaches</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">About</th>
            <th scope="col">Approved</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lifeCoach in Model)
        {
            <tr>
                <td scope="col" class="text-center">@lifeCoach.Id</td>
                <td scope="col" class="text-center">@lifeCoach.FirstName</td>
                <td scope="col" class="text-center">@lifeCoach.LastName</td>
                <td scope="col">@lifeCoach.About</td>
                <td scope="col" class="text-center">@(lifeCoach.IsApprovedLifeCoach ? "Yes" : "No")</td>
                <td scope="col">
                    <a asp-area="Admin" asp-controller="LifeCoaches" asp-action="ApproveForLifeCoach" asp-route-id="@lifeCoach.Id" class="btn btn-info">@(lifeCoach.IsApprovedLifeCoach ? "Disable" : "Approve")</a>
                    <button class="btn btn-danger mt-2 delete" 
                       data-id="@lifeCoach.Id"
                       data-controller="LifeCoaches" 
                       data-action="deleteapplication" 
                       data-body-message="Are you sure you want to delete the life coach application of @(lifeCoach.FirstName + " " + lifeCoach.LastName)? If they were an approved life coach, please note that this will delete their articles and recipes too.">
                         Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


