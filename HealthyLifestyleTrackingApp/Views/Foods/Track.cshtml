@model TrackFoodFormModel

@{
    ViewBag.Title = "Track Food";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="AmountInGrams"></label>
                <input asp-for="AmountInGrams" class="form-control" placeholder="Add eaten amount amount in grams">
                <span asp-validation-for="AmountInGrams" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealType"></label>
                <select asp-for="@Model.MealType" class="form-control" asp-items="Html.GetEnumSelectList<HealthyLifestyleTrackingApp.Data.Enums.MealType>()">
                </select>
                <span asp-validation-for="MealType" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary mt-3" type="submit" value="Track" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
